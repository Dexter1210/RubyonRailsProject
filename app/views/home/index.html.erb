<h1>Welcome Rails Blog</h1>

<% @posts.each do |post| %>
    <div class="card">
        <div class="card-body">
          <h4><%= post.title %></h4>
          <div>
          <%=post.body.truncate(200) %>
          </div>
        </div>
        <div class="card-footer">
        <h6> published at <%= time_ago_in_words( post.created_at) %></h6>
        <%= link_to "read more", post_read_path(post) %>
        </div>
      </div>
<% end %>
